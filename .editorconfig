# https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{ts,tsx,js,jsx,mts,cts,mjs,cjs}]
indent_style = space
indent_size = 2
max_line_length = 80

[*.{json,jsonc}]
indent_style = space
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false
max_line_length = off

[*.yml]
indent_style = space
indent_size = 2

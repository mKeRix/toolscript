{
  "name": "@toolscript/cli",
  "version": "0.1.0",
  "exports": "./src/cli/main.ts",
  "tasks": {
    "dev": "deno run --allow-net --allow-read --allow-write --allow-env --allow-run --allow-sys src/cli/main.ts",
    "cli": "deno run --allow-net --allow-read --allow-write --allow-env --allow-run --allow-sys src/cli/main.ts",
    "test": "deno test --allow-net --allow-read --allow-write --allow-env --allow-run --allow-sys",
    "test:cov": "deno test --allow-net --allow-read --allow-write --allow-env --allow-run --allow-sys --coverage=coverage/",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check",
    "lint": "deno lint",
    "compile": "deno compile --allow-net --allow-read --allow-write --allow-env --allow-run --allow-sys --output ./dist/toolscript src/cli/main.ts"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "lib": ["deno.window", "deno.ns"]
  },
  "fmt": {
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve",
    "exclude": ["**/*.md", ".claude/**"]
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "test": {
    "include": ["src/**/*.test.ts", "tests/**/*.test.ts"]
  },
  "imports": {
    "@cliffy/command": "jsr:@cliffy/command@1.0.0-rc.8",
    "@cliffy/table": "jsr:@cliffy/table@1.0.0-rc.8",
    "@logtape/logtape": "jsr:@logtape/logtape@^0.8",
    "@modelcontextprotocol/sdk": "npm:@modelcontextprotocol/sdk@1.22.0",
    "json-schema-to-typescript": "npm:json-schema-to-typescript@15.0.4",
    "zod": "npm:zod@3.25.76",
    "hono": "jsr:@hono/hono@^4.6",
    "@hono/mcp": "jsr:@hono/mcp@0.1.4",
    "express": "npm:express@5.1.0",
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "@std/text": "jsr:@std/text@^1.0.0"
  }
}
